RunParams
    snippetId Text
    stdin Text
    languageVersion Text
    runCommand Text
    UniqueRunParams snippetId
    deriving Typeable

RunResult
    snippetId Text
    filesHash Text
    language Text
    stdout Text
    stderr Text
    error Text
    created UTCTime
    UniqueRunResult snippetId
    UniqueRunResultHash snippetId filesHash
    deriving Typeable

CodeSnippet
    slug Text
    language Language.Id
    title Text
    public Bool
    userId UserId Maybe default=NULL
    created UTCTime
    modified UTCTime
    UniqueCodeSnippetSlug slug
    deriving Typeable Show

CodeFile
    codeSnippetId CodeSnippetId
    name Text
    content ByteString
    deriving Typeable


