User
    email Text
    password Text
    created UTCTime
    modified UTCTime
    UniqueUser email
    deriving Typeable


Profile
    userId UserId
    snippetsApiId Text
    username Text
    name Text
    created UTCTime
    modified UTCTime
    UniqueProfile userId
    UniqueSnippetsApiId snippetsApiId
    UniqueUsername username
    deriving Typeable Show

ApiUser
    userId UserId
    token Text
    created UTCTime
    modified UTCTime
    UniqueApiUser userId
    UniqueApiToken token
    deriving Typeable Show

